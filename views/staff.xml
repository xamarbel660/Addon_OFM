<odoo>
  <data>

    <record id="staff_list_action" model="ir.actions.act_window">
      <field name="name">Staff</field>
      <field name="res_model">ofm.staff</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Crea al primer Staff</p>
      </field>
    </record>

    <!-- FORM -->
    <record id="ofm_staff_form_view" model="ir.ui.view">
      <field name="name">ofm.staff.form</field>
      <field name="model">ofm.staff</field>
      <field name="arch" type="xml">
        <form string="Staffs">
          <sheet layout="auto">

            <group>
              <group>
                <field name="nombre" />
                <field name="nacionalidad" />
                <field name="dni" />
              </group>
              <group>
                <field name="rol" widget="statusbar" />
                <field name="turno" />
                <field name="salario" />
              </group>
              <!-- Botones para cambiar de rol -->
              <group>
                <button name="btn_rol_to_seguridad" string="Seguridad" type="object" class="oe_highlight" title="Cambiar rol a Seguridad"/>
                <button name="btn_rol_to_tecnico" string="Técnico" type="object" class="oe_highlight" title="Cambiar rol a Técnico"/>
              </group>
            </group>

          </sheet>
        </form>
      </field>
    </record>

    <!-- TREE -->
    <record id="ofm_staff_tree_view" model="ir.ui.view">
      <field name="name">ofm.staff.tree</field>
      <field name="model">ofm.staff</field>
      <field name="arch" type="xml">
        <tree string="tree_string">
          <field name="nombre" />
          <field name="rol" />
          <field name="turno" />
        </tree>
      </field>
    </record>

    <!-- SEARCH -->
    <record id="ofm_staff_search_view" model="ir.ui.view">
      <field name="name">ofm.staff.search</field>
      <field name="model">ofm.staff</field>
      <field name="arch" type="xml">
        <search string="Search">
          <!-- Filtros personalizados -->
          <filter string="Solo Técnicos" name="tecnicos" domain="[('rol', '=', 'tecnico')]"/>
          <!-- Sirve para separar los filtros -->
          <!-- <separator/> -->
          <filter string="Solo Seguridad" name="seguridad" domain="[('rol', '=', 'seguridad')]"/>
          <!-- Filtro al buscar en el buscador -->
          <field name="nombre" />
          <field name="rol" />
          <!-- Agrupación personalizado -->
          <group expand="1" string="Agrupar por">
            <filter string="Rol" name="group_by_rol" context="{'group_by':'rol'}"/>
          </group>
        </search>
      </field>
    </record>


  </data>
</odoo>