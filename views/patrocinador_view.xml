<odoo>
  <data>
  <record id="view_patrocinador_tree" model="ir.ui.view">
      <field name="name">patrocinador.tree</field>
      <field name="model">ofm.patrocinador</field>
      <field name="arch" type="xml">
        <tree string="patrocinadores">
            <field name="name"/>
            <field name="pais"/>
            
        </tree>
      </field>
    </record>

    
  <record id="view_patrocinador_form" model="ir.ui.view">
    <field name="name">patrocinador.form</field>
    <field name="model">ofm.patrocinador</field>
    <field name="arch" type="xml">
      <form string="Patrocinadores">
        <sheet>
          <notebook>
            <page string="Datos Generales">
              <group>
                <field name="name"/>
                <field name="pais"/>
              </group>

              <group>
                  <field name="state" widget="statusbar"/>
              </group>

              <group>
                <button name="action_patrocinador_activo" string="Activar Patrocinador" type="object" class="oe_highlight"/>
                <button name="action_patrocinador_cancelado" string="Cancelar Patrocinador" type="object" class="oe_highlight"/>
                <button name="action_patrocinador_propuesto" string="Poner como Propuesto" type="object" class="oe_highlight"/>
              </group>
            </page>

            <page string="Escenarios Patrocinados">
              <group>
                <field name="escenarios_ids">
                  <tree>
                    <field name="name"/>
                    <field name="ubicacion"/>
                    <field name="tema"/>
                    <field name="numero_de_actuaciones"/>
                  </tree>
                </field>
              </group>
            </page>


          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="fiesta_patrocinador_graph_view" model="ir.ui.view">
    <field name="name">ofm.patrocinador.graph</field>
    <field name="model">ofm.patrocinador</field>
    <field name="arch" type="xml">
      <graph string="Cantidad de escenarios patrocinados" type= "bar">
        <field name="numero_de_escenarios" type="measure"/>
        <field name="name" type="row"/>
      </graph>
    </field>
  </record>

    <record id="patrocinador_list_action" model="ir.actions.act_window">
      <field name="name">patrocinadores</field>
      <field name="res_model">ofm.patrocinador</field>
      <field name="view_mode">tree,form,graph</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Crea un patrocinador</p>
      </field>
    </record>
    
  </data>
</odoo>