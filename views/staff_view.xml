    <record id="ofm_staff_tree_view" model="ir.ui.view">
      <field name="name">ofm.staff.tree</field>
      <field name="model">ofm.staff</field>
      <field name="inherit_id" ref="view_participante_tree"/>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <field name="nacionalidad" position="after">
          <field name="rol"/>
          <field name="turno"/>
        </field>

      </field>
    </record>

    <!-- KANBAN -->
    <record id="ofm_staff_kanban_view" model="ir.ui.view">
      <field name="name">ofm.staff.kanban</field>
      <field name="model">ofm.staff</field>
      <field name="arch" type="xml">
        <kanban>
          <templates>
            <t t-name="kanban-box">
              <!-- La tarjeta en si -->
              <div class="oe_kanban_global_click">

                <!-- Titulo de la tarjeta-->
                <div class="o_kanban_record_top">
                  <!-- El titulo es el nombre del artista -->
                  <strong class="o_kanban_record_title">
                    <field name="nombre"/>
                  </strong>
                </div>

                <!-- Cuerpo de la tarjeta -->
                <div class="o_kanban_record_body">
                  <div>
                    <span class="fa fa-clock-o"/>
                    <strong>Turno: </strong>
                    <field name="turno"/>
                  </div>
                  <div>
                    <span class="fa fa-user"/>
                    <strong>Rol: </strong>
                    <field name="rol"/>
                  </div>
                </div>

              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- SEARCH -->
    <record id="ofm_staff_search_view" model="ir.ui.view">
      <field name="name">ofm.staff.search</field>
      <field name="model">ofm.staff</field>
      <field name="arch" type="xml">
        <search string="Search">
          <!-- Filtros personalizados -->
          <filter string="Solo Técnicos" name="tecnicos" domain="[('rol', '=', 'tecnico')]"/>
          <filter string="Solo Seguridad" name="seguridad" domain="[('rol', '=', 'seguridad')]"/>
          <!-- Sirve para separar los filtros -->
          <separator/>
          <filter string="Turno de Mañana" name="turno_mañana" domain="[('turno', '=', 'mañana')]"/>
          <filter string="Turno de Tarde" name="turno_tarde" domain="[('turno', '=', 'tarde')]"/>
          <filter string="Turno de Noche" name="turno_noche" domain="[('turno', '=', 'noche')]"/>
          <!-- Filtro al buscar en el buscador -->
          <field name="nombre" />
          <!-- Agrupación personalizado -->
          <group expand="1" string="Agrupar por">
            <filter string="Rol" name="group_by_rol" context="{'group_by':'rol'}"/>
            <filter string="Turno" name="group_by_turno" context="{'group_by':'turno'}"/>
          </group>
        </search>
      </field>
    </record>


  </data>
