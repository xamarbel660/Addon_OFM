    <record id="ofm_staff_form_view" model="ir.ui.view">
      <field name="name">ofm.staff.form</field>
      <field name="model">ofm.staff</field>
      <field name="inherit_id" ref="view_participante_form"/>
      <field name="mode">primary</field>

      <field name="arch" type="xml">
        <xpath expr="//group" position="after">
          <group>
            <field name="rol" widget="statusbar"/>
            <field name="turno"/>
            <field name="salario"/>
            <field name="state" invisible="1"/>
          </group>
          <header>
            <button name="btn_contratar" string="Contratar" type="object" class="oe_highlight" states="candidato"/>
          </header>
        </xpath>
      </field>
    </record>

