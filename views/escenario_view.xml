<odoo>
  <data>

    <record id="view_escenario_tree" model="ir.ui.view">
      <field name="name">escenario.tree</field>
      <field name="model">ofm.escenario</field>
      <field name="arch" type="xml">
        <tree string="escenarios">
            <field name="name"/>
            <field name="ubicacion"/>
            <field name="tema"/>
        </tree>
      </field>
    </record>


    <record id="view_escenario_form" model="ir.ui.view">
      <field name="name">escenario.form</field>
      <field name="model">ofm.escenario</field>
      <field name="arch" type="xml">
        <form string="Actuaciones">
          <sheet>
            <notebook>

              <page string="Datos Generales">
                <group>
                  <field name="name"/>
                  <field name="ubicacion"/>
                  <field name="tema"/>
                </group>
              </page>

              <page string="Patrocinadores del Escenario">
                <group>
                  <field name="patrocinadores_ids">
                  <tree>
                    <field name="name"/>
                    <field name="pais"/>
                  </tree>
                </field>
                </group>
              </page>

              <page string="Actuaciones en el Escenario">
                <group>
                  <field name="actuaciones_ids">
                  <tree>
                    <field name="name"/>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                  </tree>
                </field>
                </group>
              </page>

            </notebook>
          </sheet>
        </form>
      </field>
    </record>




    <record id="fiesta_escenario_graph_view" model="ir.ui.view">
      <field name="name">ofm.escenario.graph</field>
      <field name="model">ofm.escenario</field>
      <field name="arch" type="xml">
        <graph string="Cantidad de patrocinadores" type= "bar">
          <field name="numero_de_patrocinadores" type="measure"/>
          <field name="name" type="row"/>
        </graph>
      </field>
  </record>


    <record id="escenario_list_action" model="ir.actions.act_window">
      <field name="name">Escenarios</field>
      <field name="res_model">ofm.escenario</field>
      <field name="view_mode">tree,form,graph</field>
      <field name="view_id" ref="view_escenario_tree"/>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Crea un Escenario</p>
      </field>
    </record>

  </data>
</odoo>
