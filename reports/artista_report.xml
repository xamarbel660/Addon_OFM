<odoo>
    <template id="report_artista_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">

                        <h2 class="text-center">Ficha del Artista</h2>
                        <br/>

                        <div class="row">
                            <div class="col-6">
                                <p>
                                    <strong>Nombre:</strong>
                                    <span t-field="o.nombre"/>
                                </p>
                                <p>
                                    <strong>DNI:</strong>
                                    <span t-field="o.dni"/>
                                </p>
                            </div>
                            <div class="col-6 text-right">
                                <p>
                                    <strong>Nacionalidad:</strong>
                                    <span t-field="o.nacionalidad"/>
                                </p>
                                <p>
                                    <strong>Género:</strong>
                                    <span t-field="o.genero_musical"/>
                                </p>
                            </div>
                        </div>

                        <br/>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Concepto</th>
                                    <th>Detalle</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <strong>Caché</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.cache"/>€
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Rider Técnico</strong>
                                    </td>
                                    <td>
                                        <span t-field="o.rider_tecnico"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

