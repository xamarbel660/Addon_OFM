<odoo>
    <template id="report_patrocinador_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">

                        <h2 class="text-center">Ficha del Patrocinador</h2>
                        <h4 class="text-center text-muted">
                            <strong>Nombre del Patrocinador:</strong>
                            <span t-field="o.name"/>
                        </h4>
                        <br/>

                        <h3>Datos</h3>
                        <div class="row">
                            <div class="col-12">
                                <p>
                                    <strong>Pais:</strong>
                                    <span t-field="o.pais"/>
                                </p>
                                <p>
                                    <strong>numero de escenarios patrocinados</strong>
                                    <span t-field="o.numero_de_escenarios"/>
                                </p>
                                
                            </div>
                        </div>

                        <br/>

                        <h3>Escenarios</h3>
                        <div class="row">
                            <div class="col-12">
                                <p>
                                    <strong>Escenarios:</strong>
                                    <ul>
                                        <li t-foreach="o.escenarios_ids" t-as="e">
                                            <span t-esc="e.name"/>
                                        </li>
                                    </ul>

                                </p>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>