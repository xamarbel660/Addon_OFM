<odoo>
    <template id="report_staff_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">

                        <h2 class="text-center">Ficha de Empleado</h2>
                        <h4 class="text-center text-muted">
                            <span t-field="o.rol"/>
                        </h4>
                        <br/>

                        <div class="row">
                            <div class="col-12">
                                <p>
                                    <strong>Nombre Completo:</strong>
                                    <span t-field="o.nombre"/>
                                </p>
                                <p>
                                    <strong>Documento (DNI):</strong>
                                    <span t-field="o.dni"/>
                                </p>
                            </div>
                        </div>

                        <br/>

                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Turno Asignado</th>
                                    <th>Salario Mensual</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <span t-field="o.turno"/>
                                    </td>
                                    <td>
                                        <span t-field="o.salario"/>
 €</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

